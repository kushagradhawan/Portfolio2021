/* experimental reset */
* {
  background: none;
  border-spacing: 0;
  color: #000;
  font-family: "PT Sans Narrow", sans-serif;
  font-weight: normal;
  line-height: 1rem;
  list-style: none outside none;
  margin: 0;
  padding: 0;
  text-align: left;
  text-decoration: none;
  text-indent: 0;
  box-sizing: border-box;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}

/* scroll behaviour reset */
body {
  overscroll-behavior: none;
  box-sizing: border-box;
  background-color: red;
}

/* links reset */
a:link,
a:visited {
  text-decoration: inherit;
  color: inherit;
  cursor: auto;
}

/* button resets */
button::-moz-focus-inner,
input::-moz-focus-inner {
  border: 0;
  padding: 0;
}

/* img sets */
img {
  object-fit: cover;
  opacity: 0;
}

@font-face {
  font-family: "nmachina-regular";
  src: url("./assets/fonts/nmachina-regular.otf") format("opentype");
}
@font-face {
  font-family: "nmachina-medium";
  src: url("./assets/fonts/nmachina-medium.otf") format("opentype");
}
@font-face {
  font-family: "nmachina-bold";
  src: url("./assets/fonts/nmachina-bold.otf") format("opentype");
}
@font-face {
  font-family: "nmontreal-regular";
  src: url("./assets/fonts/nmontreal-regular.otf") format("opentype");
}
@font-face {
  font-family: "nmontreal-medium";
  src: url("./assets/fonts/nmontreal-medium.otf") format("opentype");
}
@font-face {
  font-family: "nmontreal-bold";
  src: url("./assets/fonts/nmontreal-bold.otf") format("opentype");
}
.a-title {
  text-transform: uppercase;
  font-family: "nmontreal-medium";
}

.a-title--lg {
  font-size: 12rem;
  line-height: 10rem;
  letter-spacing: -0.04em;
}

.a-title--md {
  font-size: 7rem;
  line-height: 96%;
  letter-spacing: -0.04em;
}

.a-title--sm {
  font-size: 2rem;
  line-height: 124%;
  letter-spacing: -0.04em;
}

.a-headline {
  font-family: "NeueMontreal-Medium";
  font-size: 1.5rem;
  line-height: 116%;
}

.a-callout {
  font-family: "NeueMontreal-Medium";
  font-size: 0.75rem;
  line-height: 0.875rem;
}

.a-subhead {
  font-family: "NeueMontreal-Medium";
  font-size: 0.625rem;
  line-height: 0.75rem;
}

.a-caption {
  font-family: "NeueMachina-Medium";
  text-transform: uppercase;
  font-size: 0.625rem;
  line-height: 1rem;
}

.a-caption--sm {
  font-size: 0.5rem;
  line-height: 0.75rem;
}

/* variables */
/* base styles */
.a-grid, .o-home .o-scrollable .o-home__work, .o-home .o-scrollable .m-home__intro, .o-home .o-scrollable, .alignment-grid {
  display: grid;
  grid-template-columns: repeat(8, 1fr);
  column-gap: 2rem;
  width: 80rem;
  margin-left: calc((100vw - 80rem) / 2);
}

.a-grid--no-margin, .o-home .o-scrollable .o-home__work, .o-home .o-scrollable .m-home__intro, .alignment-grid {
  margin-left: unset;
}

#a-webgl-container {
  width: 100vw;
  height: 100vh;
  z-index: -2;
  background: white;
  position: fixed;
  top: 0;
  left: 0;
}

.a-background-stripes {
  position: fixed;
  z-index: -1;
  top: 0;
  left: 4rem;
  height: 100vh;
  width: calc(100vw - 8rem);
  opacity: 0.08;
  z-index: -1;
}

.a-background-stripes--vertical {
  background: repeating-linear-gradient(90deg, white 0px, white 7px, black 7px, black 8px);
}

.alignment-grid {
  position: fixed;
  width: 80rem;
  left: calc((100vw - 80rem) / 2);
  top: 0;
  height: 100vh;
}
.alignment-grid div {
  background-color: red;
  opacity: 0.1;
}

/* navigation */
.o-nav .m-project-links {
  width: 100vw;
  background: transparent;
  position: fixed;
  top: 0;
  padding: 2rem calc((100vw - 80rem) / 2);
  display: grid;
  grid-template-columns: repeat(8, 1fr);
  column-gap: 2rem;
  z-index: 10;
  /* elements */
}
.o-nav .m-project-links .m-link-item {
  display: block;
}

/* home styles */
.o-home .o-scrollable .m-home__title {
  grid-column: 1/span 8;
  margin: 6rem 0;
}
.o-home .o-scrollable .m-home__intro {
  grid-column: 1/span 8;
  align-items: center;
}
.o-home .o-scrollable .m-home__intro .a-intro__image {
  height: 48rem;
  grid-column: 1/span 5;
  justify-self: stretch;
  transform: translate3d(-4rem, 0, 0);
}
.o-home .o-scrollable .m-home__intro .m-intro__text {
  grid-column: 7/span 2;
}
.o-home .o-scrollable .o-home__work {
  grid-column: 1/span 8;
}
.o-home .o-scrollable .o-home__work .m-work__item {
  margin-bottom: 2rem;
}
.o-home .o-scrollable .o-home__work .m-work__item .m-work__thumbnails {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-template-rows: repeat(3, 16rem);
  grid-template-areas: "t1 t2" "t1 t3" "d t3";
  column-gap: 1rem;
  row-gap: 1rem;
}
.o-home .o-scrollable .o-home__work .m-work__item .m-work__thumbnails img {
  width: 100%;
  max-height: 100%;
}
.o-home .o-scrollable .o-home__work .m-work__item .m-work__thumbnails .a-thumbnail__image-1 {
  grid-area: t1;
}
.o-home .o-scrollable .o-home__work .m-work__item .m-work__thumbnails .a-thumbnail__image-2 {
  grid-area: t2;
}
.o-home .o-scrollable .o-home__work .m-work__item .m-work__thumbnails .a-thumbnail__image-3 {
  grid-area: t3;
}
.o-home .o-scrollable .o-home__work .m-work__item .m-work__thumbnails .m-work__description {
  grid-area: d;
  align-self: start;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
}
.o-home .o-scrollable .o-home__work .m-work__item .m-work__thumbnails .m-work__description * {
  grid-column: 1/span 1;
}
.o-home .o-scrollable .o-home__work .m-work__item--left {
  grid-column: 1/span 6;
}
.o-home .o-scrollable .o-home__work .m-work__item--right {
  grid-column: 3/span 6;
}