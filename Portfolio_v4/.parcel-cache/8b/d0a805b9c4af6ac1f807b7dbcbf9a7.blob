* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}

/* scroll behaviour resets */

body {
  overscroll-behavior: none;
}

article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section,
hr {
  display: block;
}

body {
  line-height: 1;
}

ol,
ul {
  list-style: none;
}

blockquote,
q {
  quotes: none;
}

blockquote:before,
blockquote:after,
q:before,
q:after {
  content: "";
  content: none;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

/* links reset */

a:link,
a:visited {
  text-decoration: inherit;
  color: inherit;
  cursor: auto;
}

/* experimental reset */

* {
  background: none repeat scroll 0 0 transparent;
  border: medium none;
  border-spacing: 0;
  color: #000;
  font-family: "PT Sans Narrow", sans-serif;
  font-size: 16px;
  font-weight: normal;
  line-height: 1rem;
  list-style: none outside none;
  margin: 0;
  padding: 0;
  text-align: left;
  text-decoration: none;
  text-indent: 0;
}

/* button resets */

button::-moz-focus-inner,
input::-moz-focus-inner {
  border: 0;
  padding: 0;
}

/* temporary styles */

.temporary-grid {
  height: 100vh;
  position: fixed;
  top: 0;
  opacity: 0;
  z-index: 99999;
  pointer-events: none;
}

.temporary-grid .temporary-grid__cols {
  height: 100vh;
  background-color: #d4c9c966;
  border: solid 1px #d4c9c9;
  border-top: unset;
  border-bottom: unset;
}

.temporary-grid-toggle {
  position: fixed;
  top: 2rem;
  right: 2rem;
  background: #d4c9c9;
  height: 2rem;
  width: 2rem;
  z-index: 99;
}

