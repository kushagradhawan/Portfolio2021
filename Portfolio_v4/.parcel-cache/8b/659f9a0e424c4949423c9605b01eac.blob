* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}

article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section,
hr {
  display: block;
}

body {
  line-height: 1;
}

ol,
ul {
  list-style: none;
}

blockquote,
q {
  quotes: none;
}

blockquote:before,
blockquote:after,
q:before,
q:after {
  content: "";
  content: none;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

/* links reset */

a:link,
a:visited {
  text-decoration: inherit;
  color: inherit;
  cursor: auto;
}

/* contains variables, resets etc */

.b-background-stripes {
  position: fixed;
  z-index: -1;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  background: repeating-linear-gradient(90deg, white 0px, white 15px, black 15px, black 16px);
  opacity: 0.08;
}

.b-container, .o-main {
  display: grid;
  grid-template-columns: repeat(8, 1fr);
  column-gap: 1rem;
  width: 79rem;
  margin-left: calc((100vw - 79rem) / 2);
}

@font-face {
  font-family: "NeueMontreal-Regular";
  src: url("NeueMontreal-Regular.HASH_REF_66775dd6721e7be037ab74b728cec70d.otf") format("opentype");
}

@font-face {
  font-family: "NeueMontreal-Medium";
  src: url("NeueMontreal-Medium.HASH_REF_8a131819f888f5421fd475942f0438a6.otf") format("opentype");
}

@font-face {
  font-family: "NeueMachina-Medium";
  src: url("NeueMachina-Medium.HASH_REF_1d3245aad39caef6fe40694bbbc761b2.otf") format("opentype");
}

.t-h1 {
  font-family: "NeueMontreal-Medium";
  text-transform: uppercase;
  font-size: 12rem;
  transform: translate3d(-0.75rem, 0, 0);
  line-height: 10rem;
  letter-spacing: calc(-4 * 12rem / 100);
}

.t-h5 {
  font-family: "NeueMontreal-Medium";
  font-size: 0.75rem;
  line-height: 0.875rem;
}

.t-caption-1 {
  font-family: "NeueMachina-Medium";
  text-transform: uppercase;
  font-size: 0.625rem;
  line-height: 0.625rem;
}

.o-main {
  margin-top: 6rem;
}

/* modifiers */

.o-main--home {
  /* elements */
}

.o-main--home .o-landing {
  display: block;
  margin: 6rem 0;
}

.c-project-links {
  min-height: 74px;
  width: 100vw;
  background: white;
  position: fixed;
  top: 0;
  left: 0;
  padding: 2rem 0;
}

.c-fixed-nav, .c-fixed-nav--right {
  position: fixed;
  width: 16rem;
  min-height: 10rem;
  background-color: white;
  z-index: 1;
  left: 2rem;
  bottom: 2rem;
  border: solid 1px black;
}

.c-fixed-nav .t-h5, .c-fixed-nav--right .t-h5,
.c-fixed-nav .t-caption-1,
.c-fixed-nav--right .t-caption-1 {
  border: unset;
  border-bottom: solid 1px black;
  display: block;
  width: 100%;
  padding: 0.375rem;
}
