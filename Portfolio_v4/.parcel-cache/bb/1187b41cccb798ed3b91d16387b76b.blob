require("./styles/index.scss");
/*temporary js*/
/*grid toggle*/
// (name === 'true') ? 'Y' :'N';
const gridToggle = document.querySelector(".temporary-grid-toggle");
const gridCols = document.querySelectorAll(".temporary-grid__cols");
let gridState = true;
gridToggle.addEventListener("click", () => {
  gridCols.forEach(grid => {
    if (gridState) {
      grid.style.opacity = "0";
      gridState = false;
    } else {
      grid.style.opacity = "1";
      gridState = true;
    }
  });
});
